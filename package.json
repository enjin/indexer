{
  "name": "@enjin/indexer",
  "version": "5.0.0",
  "author": "Enjin <contact@enjin.io>",
  "description": "Indexer for the Matrix Chain",
  "homepage": "https://enjin.io",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/enjin/indexer.git"
  },
  "private": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "pnpm run worker && pnpm run processor && pnpm run graphql && pnpm run metrics",
    "processor": "node -r dotenv/config lib/main.js",
    "processor:dev": "pnpm exec ts-node -r dotenv/config src/main.ts",
    "graphql": "squid-graphql-server --subscriptions",
    "metrics": "node -r dotenv/config lib/prom-metrics/index.js",
    "worker": "node -r dotenv/config lib/worker/index.js",
    "worker:dev": "pnpm exec ts-node -r dotenv/config src/worker/index.ts",
    "lint": "eslint . --fix",
    "lint:ci": "eslint .",
    "build": "rm -rf lib && tsc",
    "build:ci": "rm -rf lib && tsc && pnpm run sentry:sourcemaps",
    "db:migrate": "pnpm exec squid-typeorm-migration apply",
    "db:generate": "pnpm exec squid-typeorm-migration generate",
    "schema:all": "pnpm run schema:generate && pnpm run build && pnpm run hasura:regenerate",
    "schema:generate": "pnpm exec squid-typeorm-codegen",
    "hasura:generate": "pnpm exec squid-hasura-configuration apply",
    "hasura:regenerate": "pnpm exec squid-hasura-configuration regenerate",
    "augment:generate": "pnpm run generate:defs && pnpm run generate:meta",
    "metadata:generate": "pnpm run metadata:fetch && pnpm run metadata:typegen",
    "metadata:fetch": "pnpm run metadata:matrix && pnpm run metadata:relay",
    "metadata:matrix": "rm -rf typegen/enjin-matrix.jsonl typegen/canary-matrix.jsonl && pnpm exec squid-substrate-metadata-explorer --rpc wss://archive.matrix.blockchain.enjin.io --out typegen/enjin-matrix.jsonl && pnpm exec squid-substrate-metadata-explorer --rpc wss://archive.matrix.canary.enjin.io --out typegen/canary-matrix.jsonl",
    "metadata:relay": "rm -rf typegen/enjin-relay.jsonl typegen/canary-relay.jsonl && pnpm exec squid-substrate-metadata-explorer --rpc wss://archive.relay.blockchain.enjin.io --out typegen/enjin-relay.jsonl && pnpm exec squid-substrate-metadata-explorer --rpc wss://archive.relay.canary.enjin.io --out typegen/canary-relay.jsonl",
    "metadata:typegen": "rm -rf typegen/chain-specs.jsonl && cat typegen/enjin-matrix.jsonl typegen/canary-matrix.jsonl typegen/enjin-relay.jsonl typegen/canary-relay.jsonl > typegen/chain-specs.jsonl && pnpm exec squid-substrate-typegen typegen/typegen.json",
    "generate:defs": "pnpm exec tsx node_modules/.bin/polkadot-types-from-defs --package matrixchain-indexer/common/interfaces --input ./src/common/interfaces --endpoint wss://rpc.matrix.blockchain.enjin.io",
    "generate:meta": "pnpm exec tsx node_modules/.bin/polkadot-types-from-chain --package matrixchain-indexer/common/interfaces --endpoint wss://rpc.matrix.blockchain.enjin.io --output ./src/common/interfaces",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org enjin --project enjin-indexer ./lib && sentry-cli sourcemaps upload --org enjin --project enjin-indexer ./lib"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.758.0",
    "@bull-board/api": "^6.7.10",
    "@bull-board/express": "^6.7.10",
    "@polkadot/api": "^15.7.2",
    "@polkadot/api-augment": "^15.7.2",
    "@polkadot/keyring": "^13.4.3",
    "@polkadot/types": "^15.7.2",
    "@polkadot/util": "^13.4.3",
    "@polkadot/util-crypto": "^13.4.3",
    "@sentry/node": "^9.5.0",
    "@subsquid/cli": "^3.0.4",
    "@subsquid/graphql-server": "^4.9.0",
    "@subsquid/hasura-configuration": "^2.0.0",
    "@subsquid/ss58": "^2.0.2",
    "@subsquid/substrate-processor": "^8.5.2",
    "@subsquid/substrate-runtime": "^2.0.1",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "axios": "^1.8.2",
    "big.js": "^6.2.2",
    "bullmq": "^5.41.8",
    "bullmq-otel": "^1.0.1",
    "cacheable-request": "^8.3.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "mathjs": "^14.3.1",
    "mime-types": "^2.1.35",
    "node-cache": "^5.1.2",
    "pg": "^8.13.3",
    "prom-client": "^15.1.3",
    "ts-pattern": "^5.6.2",
    "type-graphql": "1.2.0-rc.1",
    "web3-validator": "^2.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@polkadot/typegen": "^15.7.2",
    "@sentry/cli": "^2.42.2",
    "@subsquid/substrate-metadata-explorer": "^3.2.0",
    "@subsquid/substrate-typegen": "^8.1.0",
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/big.js": "^6.2.2",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.16",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.13.10",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "peerDependencies": {
    "@subsquid/typeorm-config": "4.1.1",
    "@subsquid/util-internal-hex": "1.2.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.11"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "volta": {
    "node": "20.18.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli"
    ]
  }
}
