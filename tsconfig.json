{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "inlineSources": true,
    "sourceRoot": "/",
    "paths": {
      "@enjin/indexer/*": ["src/*"],
      "@polkadot/api/augment": ["src/common/interfaces/augment-api.ts"],
      "@polkadot/types/lookup": ["src/common/interfaces/types-lookup.ts"],
      "@polkadot/types/augment": ["src/common/interfaces/augment-types.ts"]
    },
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
